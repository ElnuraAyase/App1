# add edit
todos = []

while True:
    user_action = input("Type add, edit,  show or exit: ")
    user_action = user_action.strip()

    match user_action:
        case 'add':
            todo= input("Enter a todo: ")
            todos.append(todo)
        case 'show':
            for item in todos:
                print(item)
        case'edit':
            number= input("Enter the nuber of a todo to edit: ")
            print(number)
        case 'exit':
            break
print("Bye!")
