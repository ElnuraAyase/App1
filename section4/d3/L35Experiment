todos[]

while True:
    user_action = input("Type add, check or exit: ")
    user_action = user_action.strip()

    match user_action: 
        case 'add': 
            todo = input("Enter a todo: ")
            todos.append(todo)
        case 'show' | 'display':  # for different versions of the same command, | = bitwise,or operstor
            for item in todos:
            print(item)
        case 'exit':
             break
        case _: # for any other input discluding the offered ones
             print("The command is unknown.")

print("Bye!")


